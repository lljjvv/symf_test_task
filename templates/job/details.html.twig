{% extends 'base.html.twig' %}

{% block title %}Job detail
{% endblock %}

{% block body %}
	<style>
		.wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.wrapper div {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="wrapper">
		<div class="candidates">
			{% for candidat in candidates %}
				<span>{{ candidat.id }}) {{ candidat.name }}</span> <strong>{{candidat.score }}</strong></br>
			{% endfor %}
		</div>
	</div>
{% endblock %}
